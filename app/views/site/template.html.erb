	          <td><%= "Otto #{i}" %></td>
	          <td><%= "@mdo #{i}" %></td>
	          <td>
	          	<a href="#" class="btn btn-default">
	          		<i class="glyphicon glyphicon-eye-open"></i>
	          	</a>
	          	<a href="#" class="btn btn-warning">
	          		<i class="glyphicon glyphicon-edit"></i>
	          	</a>
	          	<a href="#" class="btn btn-danger">
	          		<i class="glyphicon glyphicon-trash"></i>
	          	</a>
	          </td>
	        </tr>
        <% end %>
        	<tr class="danger">
